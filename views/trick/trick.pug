doctype html
html(lang='en')
  include ../common/head.pug
  +head("Trick")
  body
    header
      include ../common/navbar.pug
      +navbar(user)
      .container
        .row.align-items-center
          .col-md-6.order-md-1.text-center.text-md-left.pr-md-5
            h1 Trick
            table.table
              thead
                tr
                  th(scope="col") Description
                  if user.local.isAdmin
                    th(scope="col") Edit
                    th(scope="col") Delete
                tr
              tbody                              
                //- tr(id=`#{trick.id}`)
                tr(id=trick.id)
                  td
                    span #{trick.description}
                  if user.local.isAdmin
                    td
                      a(href="/trick/" + trick.id + "/edit") Edit
                    td 
                      form(action="/trick/" + trick.id + "/delete", method="POST")
                        button(type="submit").btn.btn-primary Delete
    include ../common/footer.pug
    +footer()
    script(src='/js/tricks.js')
